<% content_for :error_messages do %>
  <ul>
    <% @offer.errors.full_messages.each do |error_message| %>
      <li><%= error_message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [:admin, @offer], class: 'mt-4' do |f| %>
  <div class="mb-3">
    <%= f.label :advertiser_name, 'Advertiser name', class: 'form-label' %>
    <%= f.text_field :advertiser_name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :url, 'URL', class: 'form-label' %>
    <%= f.text_field :url, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :description, 'Description', class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :starts_at, 'Starts at', class: 'form-label' %>
    <%= f.date_field :starts_at, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :ends_at, 'Ends at', class: 'form-label' %>
    <%= f.date_field :ends_at, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.check_box :premium, class: 'form-check-input' %>
    <%= f.label :premium, 'Premium', class: 'form-check-label' %>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>